<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="evaluaciones_equipo" name="Historial de Evaluaciones del Equipo">
		<t t-call="website.layout">
			<div class="main">
				<div class="card-contacto-main">
					<div class="card-contacto">
						<div class="text-contacto">
							<t t-if="dominio_web == 'fdccorp.com.pe'">
								<img src="/pmant/static/src/css/iconos/ico_fdc.png" alt="" />
								<span>
									FDC CORPORATION E.I.R.L.
								</span>
							</t>
							<t t-if="dominio_web == 'compresores.com.pe'">
								<img src="/pmant/static/src/css/iconos/icon-ct.png" alt="" />
								<span>
									Compresores de Tornillo S.A.C.
								</span>
							</t>
							<t t-if="dominio_web != 'fdccorp.com.pe' and dominio_web != 'compresores.com.pe'">
								<img src="/pmant/static/src/css/iconos/ico_fdc.png" alt="" />
								<span>
									FDC CORPORATION E.I.R.L.
								</span>
							</t>
						</div>
						<div class="contactar">
							<a href="/contactus" class="bg-primary">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" id="customer-care">
									<path d="M54,27.29v-.35a21.94,21.94,0,1,0-43.88.12v.2A7,7,0,0,0,5,34v2a7,7,0,0,0,7,7h1.05A13,13,0,0,0,26,55h6a5,5,0,0,0,5-5V49a1,1,0,0,0-1-1H28a1,1,0,0,0-1,1v4H26A11,11,0,0,1,15,42V28a1,1,0,0,0-1-1H12.12A19.94,19.94,0,1,1,52,26.94V27H50a1,1,0,0,0-1,1V42a1,1,0,0,0,1,1h2a7,7,0,0,0,7-7V34A7,7,0,0,0,54,27.29ZM29,50h6a3,3,0,0,1-3,3H29ZM13,41H12a5,5,0,0,1-5-5V34a5,5,0,0,1,5-5h1Zm44-5a5,5,0,0,1-5,5H51V29h1a5,5,0,0,1,5,5Z">
									</path>
								</svg>
								Contactar
							</a>
						</div>
					</div>
					<div class="main-card-detalles-equipo">
						<div class="detalle-equipo-header">
							<div class="name-equipo">
								<label>
									Nombre
								</label>
								<h4 t-esc="equipo.name">
								</h4>
								<!--
								<button href="" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
								Solicitar servicio
								</button>
								-->
							</div>
							<div class="img-header-equipo">
								<img t-att-src="'/web/image?model=maintenance.equipment&amp;id=%s&amp;field=image' % equipo.id" alt="Imagen del equipo" />
								<img t-att-src="'/web/image?model=maintenance.equipment&amp;id=%s&amp;field=qr_image' % equipo.id" alt="Qr del equipo" />
							</div>
							<!--
							<button href="" type="button" class="btn btn-primary btn-mobile" data-bs-toggle="modal" data-bs-target="#exampleModal">
							Solicitar servicio
							</button>
							-->
						</div>
						<div class="descripcion-propieadades-equipo">
							<div class="propiedades-contenedor">
								<div class="propiedad">
									<label>
										Propitario :
									</label>
									<span t-esc="equipo.propietario.name">
									</span>
								</div>
								<div class="propiedad">
									<label>
										Ubicacion :
									</label>
									<span t-esc="equipo.ubicacion.name">
									</span>
								</div>
							</div>
							<div class="propiedades-contenedor">
								<div class="propiedad">
									<label>
										Categoria :
									</label>
									<span t-esc="equipo.category_id.name">
									</span>
								</div>
								<div class="propiedad">
									<label>
										Fecha Asignada :
									</label>
									<span t-esc="equipo.assign_date">
									</span>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="main-card-sedes">
                    <div>
                        <h3>Historial de Evaluaciones</h3>
                    </div>
					<div class="main-sedes">
						<t t-if="len(tareas) > 0">
							<t t-set="item" t-value="0" />
							<t t-foreach="tareas" t-as="plan">
								<t t-set="item" t-value="item + 1" />
								<div style="background: white;overflow: hidden;border-radius: 10px;box-shadow:0px 3px 14px 0px rgba(0, 0, 0, 0.21);height: max-content;" class="accordion" t-att-id="'accordionExample' + str(item)">
									<div class="accordion-item">
										<h2 class="accordion-header">
											<button style="display:flex; flex-flow:row; gap:5px;"  class="accordion-button" type="button" data-bs-toggle="collapse" t-att-data-bs-target="'#collapse' +  str(item)" aria-expanded="true" aria-controls="collapseOne">
												<span t-esc="str(item) + &quot;.&quot;">
												</span>
												<t t-esc="equipo.name" />
												-
												<t t-esc="plan.name" />
											</button>
										</h2>
										<div t-att-id="'collapse' + str(item)" class="accordion-collapse collapse " t-att-data-bs-parent="'#accordionExample' + str(item)">
											<div class="accordion-body">
												<div style="display: flex;justify-content: space-between;">
													<strong>
														Detalles
													</strong>
													<a style="display: flex;flex-flow: row nowrap;justify-content: center;align-items: center;width: 100px;height: 23px;color: white;border-radius: 5px;text-decoration: none;gap: 5px;font-style: normal;font-weight: 500;line-height: normal;font-size: 13px;" t-att-href="'/descargas/reporte/evaluacion/' + str(plan.id) " class="bg-primary">
														Reporte
													</a>
												</div>
												<hr>
												</hr>
												<div>
													<p>
														<strong>
															Comentario de recepcion:
														</strong>
													</p>
													<p t-esc="plan.comentario_tecnico">
													</p>
												</div>
												<hr>
												</hr>
												<p>
													<strong>
														Fotos de recepcion
													</strong>
												</p>
												<div stye="display:flex; gap:5px;">
													<t t-foreach="plan.adjuntos_evaluaciones" t-as="adjunto">
														<t t-if="len(plan.adjuntos_evaluaciones) > 0">
															<img class="zoomable-image" t-att-src="'data:image/jpeg;base64,' + adjunto.adjuntoimage.decode('utf-8')" style="width:80px;height:80px;border: 1px solid #e2e2e2;" />
															<!-- <p t-esc="adjunto.adjuntoimage" /> -->
														</t>
														<t t-else="">
															<p>
																Aun sin imagenes de recepcion
															</p>
														</t>
													</t>
												</div>
												<hr>
												</hr>
												<p style="margin-top:8px;">
													<strong>
														Fecha de recepcion:
													</strong>
													<t t-esc="plan.fecha_entrada" />
												</p>
											</div>
										</div>
									</div>
								</div>
							</t>
						</t>
						<t t-else="">
							Aun no cuenta con servicios registrados en este equipo, solicta
							<a t-att-href="'/my/equipos/%d/detalles' % equipo.id">
								Aqui
							</a>
							un nuevo servicio.
						</t>
					</div>
                    <div class="contenedor-paginacion">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                <!-- Enlace a la página anterior -->
                                <li t-if="pagina_actual &gt; 1" class="page-item">
                                    <a t-att-href="'/my/equipo/%s/evaluaciones/page/%s' % (equipo.id, pagina_actual - 1)" class="page-link" aria-label="Previous">
                                        <span>« Anterior</span>
                                    </a>
                                </li>
                                <!-- Enlaces a las páginas -->
                                <t t-foreach="range(1, total_paginas + 1)" t-as="page">
                                    <li t-attf-class="page-item #{'active' if page == pagina_actual else ''}">
                                        <a t-att-href="'/my/equipo/%s/evaluaciones/page/%s' % (equipo.id, page)" class="page-link">
                                            <t t-esc="page" />
                                        </a>
                                    </li>
                                </t>
                                <!-- Enlace a la página siguiente -->
                                <li t-if="pagina_actual &lt; total_paginas" class="page-item">
                                    <a t-att-href="'/my/equipo/%s/evaluaciones/page/%s' % (equipo.id, pagina_actual + 1)" class="page-link" aria-label="Next">
                                        <span>Siguiente »</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    
				</div>
			</div>
            <div class="visor-imagen display-none">
                <img src="" />
            </div>
            <script type="text/javascript" src="/pmant/static/src/js/main.js"></script>

		</t>
	</template>
</odoo>
